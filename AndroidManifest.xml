<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.turbo_extreme_sloth.ezzence"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_PERMISSION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.turbo_extreme_sloth.ezzence.activities.LoginActivity"
            android:label="@string/app_name"
            android:permission="android.permission.INTERNET" >
        </activity>
        <activity
            android:name="com.turbo_extreme_sloth.ezzence.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.turbo_extreme_sloth.ezzence.activities.UnlockActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.turbo_extreme_sloth.ezzence.activities.ConsumptionOverviewActivity"
            android:label="@string/title_activity_consumption_overview" >
        </activity>
        <activity
            android:name="com.turbo_extreme_sloth.ezzence.activities.SetTemperatureActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.turbo_extreme_sloth.ezzence.ChangePINActivity"
            android:label="@string/title_activity_change_pin" >
        </activity>
        <activity
            android:name="com.turbo_extreme_sloth.ezzence.activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.turbo_extreme_sloth.ezzence.activities.ManagePrivilegesActivity"
            android:label="@string/title_activity_manage_privileges" >
        </activity>
    </application>

</manifest>
